//- Load and Initialize translations
include ../partials/locales

//- Local variables
- const fullYear = (new Date).getFullYear();

//- External variables
block variables

doctype html
html(lang='en' dir='ltr')
  head
    //- Meta
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(property='description' content='Hello world')

    //- Page title
    title= title

    //- Favicons
    link(rel='icon' href='@images/favicons/favicon.svg' type='image/svg+xml' sizes='any')

    //- Page styles
    block style
      //- common used styles
      link(href='@styles/main.scss' rel='stylesheet')

    //- Additional head block, e.g. for preload scripts in head
    block head
      script(src='@scripts/common.js' defer)

  body
    //- Main header
    .header-container
      .header-content
        .header-left
        .header-middle
          a(href="index.html")= t`Home`
          a(href="about.html")= t`About`
        .header-right
          a(href=`../${langPath.en}${route}`) en
          | &nbsp;|&nbsp;
          a(href=`../${langPath.de}${route}`) de

    //- Main content
    main.main-container
      .main-content
        block content

    //- Main footer
    .footer-container
      div.
        Copyleft #[span.copyleft] #{fullYear} #[a(href="https://github.com/webdiscus") @webdiscus].
        Powered by #[a(href="https://github.com/webdiscus/pug-plugin") Pug Plugin].

    //- Page scripts
    block script
