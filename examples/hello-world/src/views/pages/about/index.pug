extends @views/layouts/default.pug

//- set variables used in layout
block variables
  - const title = 'About'

//- add page specifically styles
append style
  link(href='./style.scss' rel='stylesheet')

//- add page specifically scripts
append script
  script(src='./main.js' defer='')

block content
  section
    .container.flex-column.center-x
      h1 About
      .teaser The pug-plugin makes using Pug very easy. Please see details on <a href="https://github.com/webdiscus/pug-plugin/" class="link">GitHub</a>.
      img.about-logo(src='@images/about-logo.png')
