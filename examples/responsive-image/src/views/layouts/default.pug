//- Local variables
- const fullYear = (new Date).getFullYear();

//- External variables
block variables

doctype html
html(lang="en", dir="ltr")
  head
    block head
      meta(charset="UTF-8")

      //- Page title
      title= title

      link(rel="icon" type="image/png" sizes="64x64" href=require('Images/favicon.png?size=64'))

    block style
      link(rel="stylesheet", href=require('Styles/main.scss'))

  body
    //- page header
    .main-header
      block header

    //- main content
    main.main-content
      block body

    //- page footer
    .footer-container
      div.
        Copyleft #[span.copyleft] #{fullYear} #[a(href="https://github.com/webdiscus") @webdiscus].
        Powered by #[a(href="https://github.com/webdiscus/pug-plugin") Pug Plugin]
        and #[a(href="https://github.com/dazuaz/responsive-loader") Responsive Loader].

    //- scripts
    block script
      script(src=require('Scripts/main.js'))
